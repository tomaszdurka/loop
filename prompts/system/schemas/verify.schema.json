{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "pass": { "type": "boolean" },
    "evidence": {
      "type": "array",
      "items": { "type": "string" }
    },
    "failures": {
      "type": "array",
      "items": { "type": "string" }
    },
    "recommended_next_actions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["pass", "evidence", "failures", "recommended_next_actions"],
  "additionalProperties": true
}
